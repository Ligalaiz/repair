-
  const interiorStyles = [
    {
      id: 1,
      title: 'Кафельная плитка в ванной комнате в скандинавском стиле',
      desc: 'bathroom',
      status: ''
    },
    {
      id: 2,
      title: 'Кафельная плитка в ванной комнате в скандинавском стиле',
      desc: 'bathroom',
      status: 'active'
    },
    {
      id: 3,
      title: 'Кафельная плитка в ванной комнате в скандинавском стиле',
      desc: 'bathroom',
      status: ''
    },
  ]

mixin Interior
  section.interior
    .interior__container
      .container
        .interior__head
          .interior__title 3 стиля интерьера
          .interior__subtitle Скандинавский, классический и эко-стиль
      .interior__body
        .interior__slider.slider-interior#sliderWrap
          ul.slider-interior__list.reset-list#slidesList
            each slide in interiorStyles
              li.slider-interior__slide(class= `${slide.status === 'active' ? 'active' : ''}`, id=`slide${slide.id}`)
                .slider-interior__img
                  img(src=require(`../../assets/img/slide${slide.id}@1x.jpg`), alt=`${slide.desc}`)
                .slider-interior__desc= slide.title
          .slider-interior__controls.slider-controls
            button.slider-controls__prev#btnPrev
            button.slider-controls__next#btnNext
